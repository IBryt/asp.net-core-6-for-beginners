
@model Product
<table class="table table-striped table-bordered">
    <tbody>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.Price</td>
        </tr>

        <tr>
            <th>Category</th>
            <td>@Model.Category?.Name</td>
        </tr>
    </tbody>
</table>