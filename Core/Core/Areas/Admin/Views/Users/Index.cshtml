@model List<IdentityUser>
<h1>Admin Area</h1>

<table class="table table-bordered">
    <tr class="text-center">
        <th class="bg-primary text-white">Id</th>
        <th class="bg-primary text-white">UserName</th>
        <th class="bg-primary text-white">Email</th>
        <th class="bg-primary text-white">Edit</th>
        <th class="bg-primary text-white">Delete</th>
    </tr>

    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="5" class="text-center">No User Accounts</td>
        </tr>
    }
    else
    {
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-sm btn-warning"
                       asp-area="Admin"
                       asp-action="Edit"
                       asp-route-id="@user.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-warning"
                       asp-area="Admin"
                       asp-action="Delete"
                       asp-route-id="@user.Id">Delete</a>
                </td>

            </tr>
        }
    }
</table>