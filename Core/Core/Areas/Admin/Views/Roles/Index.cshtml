@model IEnumerable<IdentityRole>
<h1>Roles</h1>

<a asp-action="Create">Add new role</a>
<hr />

<table class="table table-bordered">
    <tr class="text-center">
        <th class="bg-primary text-white">Id</th>
        <th class="bg-primary text-white">Name</th>
        <th class="bg-primary text-white">Members</th>
        <th class="bg-primary text-white">Edit</th>
        <th class="bg-primary text-white">Delete</th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="5" class="text-center">No Roles</td>
        </tr>
    }
    else
    {
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>members</td>
                <td>
                    <a class="btn btn-sm btn-warning"
                       asp-action="Edit"
                       asp-route-id="@role.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-warning"
                       asp-action="Delete"
                       asp-route-id="@role.Id">Delete</a>
                </td>

            </tr>
        }
    }
</table>