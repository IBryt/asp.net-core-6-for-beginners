@model Product

@{
    ViewBag.Title = "Form";
}

<h2 class="bg-primary text-white text-center p-2">
    Form
</h2>

@* <form action="/form/submitform" method="post"> *@
    @* @Html.AntiForgeryToken() *@
<form asp-action="submitform" method="post" id="htmlform">
    <div class="form-group">
        <label>Id</label>
        <input class="form-control" asp-for="Id" value="@Model.Id" />
    </div>

    <div class="form-group">
        <label>Name</label>
        <input class="form-control" asp-for="Name" value="@Model.Name" />
    </div>

    <div class="form-group">
        <label>Price</label>
        <input class="form-control" asp-for="Price" value="@Model.Price" />
    </div>

    <div class="form-group">
        <label>Category</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
    </div>

    <button class="btn btn-primary mt-2">Submit</button>
</form>


<button class="btn btn-primary mt-2" form="htmlform" asp-action="submitform">
    Submit (outside form)
</button>